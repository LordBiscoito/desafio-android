<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">


    <TextView android:id="@+id/challengeText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textAllCaps="true"
              android:textStyle="bold"
              android:layout_marginTop="60dp"
              android:textSize="22sp"
              android:textColor="@color/main_textview_color"
              android:text="@string/android_challenge_text"
              app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="230dp"
               android:src="@drawable/splash_logo"
               app:layout_constraintTop_toBottomOf="@id/challengeText"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toTopOf="@id/letsGoText"/>

    <TextView android:id="@+id/letsGoText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textAllCaps="true"
              android:textStyle="bold"
              android:layout_marginBottom="60dp"
              android:textSize="22sp"
              android:textColor="@color/main_textview_color"
              android:text="@string/lets_go_text"
              app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>